@model GYMDBMS.Models.Food

@{
    ViewData["Title"] = "Details";
}

<head>
    <!-- Add the CSS code for the background image here -->
    <style>
        /* Apply background image to the entire page */
        body {
            background-image: url("/Images/foodpage.jpg");
            background-size: cover; /* Cover the entire viewport */
            background-position: center; /* Center the background image */
            background-repeat: no-repeat; /* Prevent background image from repeating */
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
            color: white; /* Set text color to white for better visibility */
        }

        /* Adjust title size and color */
        h1 {
            font-size: calc(48px - 30%); /* Reduce title font size by 30% */
            color: black; /* Set title text color to black */
            font-weight: bold; /* Make title text bold */
        }

        /* Adjust heading size and color */
        h4 {
            font-size: calc(32px - 30%); /* Reduce heading font size by 30% */
            color: black; /* Set heading text color to black */
        }

        /* Adjust list styles */
        .row {
            margin: 20px 0; /* Add margin to the row */
        }

        /* Adjust definition term styles */
        .col-sm-2 {
           /* Make definition terms bold */
            color: black; /* Set definition term text color to black */
            font-size: 24px; /* Set definition term font size */
        }

        /* Adjust definition description styles */
        .col-sm-10 {
            color: black;
            font-size: 24px;
            /* Set definition description font size */
        }

        /* Adjust button styles */
        .btn {
            background-color: white; /* Set button background color to white */
            color: deepskyblue; /* Set button text color to deep sky blue */
            padding: 15px 30px; /* Increase button padding */
            font-size: calc(24px - 30%); /* Reduce button font size by 30% */
            border-radius: 5px; /* Add border radius to button */
            border: 1px solid transparent; /* Add border to button */
            transition: all 0.3s ease; /* Add transition effect for smooth hover */
            text-decoration: none; /* Remove underline from button */
            margin-right: 10px; /* Add margin to button */
        }

            /* Hover effect for buttons */
            .btn:hover {
                background-color: #f2f2f2; /* Lighten button background color on hover */
                color: navy; /* Change button text color on hover */
            }
    </style>
</head>

<h1>Details</h1>

<div>
    <h4>Food</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calories)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calories)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Protien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Protien)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carbohydrates)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carbohydrates)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fat)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FoodId" class="btn">Edit</a> |
    <a asp-action="Index" class="btn">Back to List</a>
</div>
