@model GYMDBMS.Models.Trainer

@{
    ViewData["Title"] = "Delete";
}

<head>
    <!-- Add the CSS code for the background image here -->
    <style>
        /* Apply background image to the entire page */
        body {
            background-image: url("/Images/gymwall7.jpg");
            background-size: cover; /* Cover the entire viewport */
            background-position: center; /* Center the background image */
            background-repeat: no-repeat; /* Prevent background image from repeating */
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }

        /* Adjust title size and color */
        h1, h4 {
            font-size: calc(48px - 30%); /* Reduce title font size by 30% */
            color: deepskyblue; /* Set title text color to deep sky blue */
            font-weight: bold; /* Make title text bold */
        }

        h3 {
            font-size: calc(42px - 30%); /* Reduce title font size by 30% */
            color: deepskyblue; /* Set title text color to deep sky blue */
            font-weight: bold; /* Make title text bold */
        }

        /* Adjust text size and color */
        .col-sm-2 {
            font-size: 24px; /* Set font size for labels */
            color: deepskyblue; /* Set text color to deep sky blue */
        }

        .col-sm-10 {
            font-size: 24px; /* Set font size for displayed data */
            color: deepskyblue; /* Set text color to deep sky blue */
        }

        /* Adjust button styles */
        .btn {
            background-color: #ff6666; /* Set button background color to red */
            color: white; /* Set button text color to white */
            padding: 15px 30px; /* Increase button padding */
            font-size: 24px; /* Set button font size */
            border-radius: 5px; /* Add border radius to button */
            border: none; /* Remove border from button */
            transition: all 0.3s ease; /* Add transition effect for smooth hover */
            text-decoration: none; /* Remove underline from button */
            margin-right: 10px; /* Add margin to button */
        }

            /* Hover effect for buttons */
            .btn:hover {
                background-color: #cc0000; /* Darken button background color on hover */
            }
    </style>
</head>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialty)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TrainerId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn">Back to List</a>
    </form>
</div>
