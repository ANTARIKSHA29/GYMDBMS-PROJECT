@model IEnumerable<GYMDBMS.Models.Trainer>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Apply background image to the entire page */
    body {
        background-image: url("/Images/trainerback3.jpg");
        background-size:auto; /* Cover the entire viewport */
        background-position: center; /* Center the background image */
        background-repeat: repeat; /* Prevent background image from repeating */
        margin: 0; /* Remove default margin */
        padding: 0; /* Remove default padding */
        color: white; /* Set text color to white for better visibility */
    }

    /* Adjust title size and color */
    h1 {
        font-size: 48px; /* Increase title font size */
        color: white; /* Set title text color to white */
    }

    /* Adjust table header and row font size and color */
    th, td {
        font-size: 20px; /* Increase font size */
        color: white; /* Set text color to white */
        font-weight: bold;
    }

    /* Adjust button styles */
    .btn {
        background-color: white; /* Set button background color to white */
        color: black; /* Set button text color to black */
        padding: 10px 20px; /* Increase button padding */
        font-size: 20px; /* Increase button font size */
        border-radius: 5px; /* Add border radius to button */
        border: 1px solid transparent; /* Add border to button */
        transition: all 0.3s ease; /* Add transition effect for smooth hover */
    }

        /* Hover effect for buttons */
        .btn:hover {
            background-color: #f2f2f2; /* Lighten button background color on hover */
            color: black; /* Change button text color on hover */
        }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn">Create New</a> <!-- Apply button styles -->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn">Edit</a> | <!-- Apply button styles -->
                    <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn">Details</a> | <!-- Apply button styles -->
                    <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn">Delete</a> <!-- Apply button styles -->
                </td>
            </tr>
        }
    </tbody>
</table>

