    <h4>Workout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="font-size: 24px;">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="font-size: 24px;">
