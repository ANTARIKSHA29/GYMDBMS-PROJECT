@model GYMDBMS.Models.Workout

@{
    ViewData["Title"] = "Delete";
}

<head>
    <!-- Add the CSS code for the background image here -->
    <style>
        /* Apply background image to the entire page */
        body {
            background-image: url("/Images/gymwall9.jpg");
            background-size: cover; /* Cover the entire viewport */
            background-position: center; /* Center the background image */
            background-repeat: no-repeat; /* Prevent background image from repeating */
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
            color: white; /* Set text color to white for better visibility */
        }

        /* Adjust title size and color */
        h1 {
            font-size: calc(48px - 30%); /* Reduce title font size by 30% */
            color: white; /* Set title text color to white */
            font-weight: bold; /* Make title text bold */
        }

        /* Adjust heading size and color */
        h3, h4 {
            font-size: calc(30px - 30%); /* Reduce heading font size by 30% */
            color: white; /* Set heading text color to white */
        }

        /* Adjust text size and color */
        .col-sm-2 {
            font-size: calc(20px - 30%); /* Reduce font size for labels by 30% */
            color: white; /* Set text color to white */
        }

        .col-sm-10 {
            font-size: calc(20px - 30%); /* Reduce font size for displayed data by 30% */
            color: white; /* Set text color to white */
        }

        /* Adjust button styles */
        .btn-danger {
            background-color: white; /* Set button background color to white */
            color: black; /* Set button text color to black */
            padding: 15px 30px; /* Increase button padding */
            font-size: calc(24px - 30%); /* Reduce button font size by 30% */
            border-radius: 5px; /* Add border radius to button */
            border: 1px solid transparent; /* Add border to button */
            transition: all 0.3s ease; /* Add transition effect for smooth hover */
        }

            /* Hover effect for buttons */
            .btn-danger:hover {
                background-color: #f2f2f2; /* Lighten button background color on hover */
                color: black; /* Change button text color on hover */
            }

        /* Set text color to white for better visibility */
        .text-danger {
            color: white; /* Set text color to white */
            font-size: 20px; /* Adjust font size for labels */
        }
    </style>
</head>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Workout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="font-size: 24px;">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="font-size: 24px;">
            <!-- Adjust font size here -->
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2" style="font-size: 24px;">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10" style="font-size: 24px;">
            <!-- Adjust font size here -->
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="WorkoutId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>
